# Production Environment Variables for Render
# Copy this file and set these variables in Render Dashboard

NODE_ENV=production
PORT=5000

# Database URLs (will be provided by Render)
MONGO_URI=mongodb://username:password@host:port/database
REDIS_URL=redis://host:port

# JWT Secrets (generate secure random strings)
JWT_SECRET=your-super-secure-jwt-secret-key-for-production
JWT_REFRESH_SECRET=your-super-secure-refresh-token-secret-for-production

# Clerk Authentication (get from Clerk Dashboard)
CLERK_PUBLISHABLE_KEY=pk_test_your_clerk_publishable_key
CLERK_SECRET_KEY=sk_test_your_clerk_secret_key

# AI Configuration
USE_MOCK_AI=true
USE_MOCK_EMBEDDINGS=true

# CORS Origins (your frontend URL)
CORS_ORIGIN=https://your-frontend-app.onrender.com

# File Upload Configuration
MAX_FILE_SIZE=10485760
UPLOAD_PATH=/app/uploads
